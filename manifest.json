{
  "name" : "DT Warning Goose",
  "description" : "Warning Goose - Crowdsourced Privacy Alert",
  "version": "1.0",
  "manifest_version": 2,
  "author": "DATA TRANSITION",

  "icons":{
    "16": "img/icon16.png",
    "128":"img/icon.png"
  },

  "browser_action":{
    "default_icon":{
      "16":"img/icon16.png"
    },

    "default_popup": "form.html",
    "default_title":"Data Transition"
  },

  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],

      "js": ["js/content.js"]
    }

  ],

  "background":{
    "scripts":["js/background.js"]
  },

  "permissions": [
    "privacy",
    "storage",
    "tabs",
    "activeTab",
    "webNavigation",
    "webRequest",
    "<all_urls>",
    "notifications"
  ],
  "web_accessible_resources": [
    "/web_accessible_resources/*"
  ]

}
